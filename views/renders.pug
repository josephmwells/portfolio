doctype html
html(lang='en')
  head
    meta(charset='UTF-8')
    meta(name="viewport" content="width=device-width, initial-scale=1")
    title a portal to another world
    link(rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css")
    link(href="css/styles.css" rel="stylesheet" type='text/css')
    script(src='https://code.jquery.com/jquery-3.2.1.min.js')
    
  body
    
    mixin work-link(title, image, webm, text, link)
      .info-container
        if title
          p(class='centered title')= title
        if link
          if webm
            video(controls autoplay loop)
              source(src= image + ".webm" type="video/webm")
              source(src= image + ".mp4" type="video/mp4")
          else
            a(href=link): img(class='centered' src=image)
        else
          if webm
            video(controls autoplay loop)
              source(src= image + ".webm" type="video/webm")
              source(src= image + ".mp4" type="video/mp4")
          else
            img(class='centered' src=image)
        if text
          p(class='info-header') <strong>info</strong>
          p(class='info-text')= text
        
    .main-container
      .nav-container
        ul(class='nav-main')
          li: a(href='/') home
          li(class='dropdown')
            a(class='active work' href='/work') work
            ul(class='dropdown-open')
              li: a(href='/coding') creative coding
              li: a(href='/installations') installations
              li: a(href='/motion') motion graphics
              li: a(class='active' href='/renders') 3D renders
              li: a(href='/visuals') visuals
              li: a(href='https://spacepunk.media') spacepunk.media
          li: a(href='/about') about
          
      .info-container
        p(class='centered') a collection of renders made in Cinema 4D and edited in Photoshop and After Effects respectively
        
      +work-link('bead bust', '/images/cinema4d/still/bead-bust-00-min.jpg', false, flase, '/images/cinema4d/still/bead-bust-00.jpg')
      +work-link('can not rest', '/images/cinema4d/still/laying-pose-1080-2-min.jpg', false, false, '/images/cinema4d/still/laying-pose-1080-2.jpg')
      +work-link("god's light", '/images/cinema4d/still/gods-light-min.jpg', false, false, '/images/cinema4d/still/gods-light.jpg')
      +work-link('last night', '/images/cinema4d/still/purple-block-min.png', false, false, '/images/cinema4d/still/purple-block.png')
      +work-link(false, 'https://fat.gfycat.com/IdleDarkFox', true)
      +work-link(false, 'https://fat.gfycat.com/DeliciousElatedBonobo', true)
      +work-link(false, 'https://fat.gfycat.com/DesertedDirtyIndianrhinoceros', true)
      +work-link(false, 'https://zippy.gfycat.com/KindHappyBasil', true)
      
  script(src='javascripts/script.js')
      
