doctype html
html(lang='en')
  include ./head.pug
    
  body
    
    mixin work-link(title, image, webm, link)
      .info-container
        if title
          p(class='centered title')= title
        if link
          if webm
            video(controls loop)
              source(src= image + ".webm" type="video/webm")
              source(src= image + ".mp4" type="video/mp4")
          else
            a(href=link): img(class='centered' src=image)
        else
          if webm
            video(controls loop)
              source(src= image + ".webm" type="video/webm")
              source(src= image + ".mp4" type="video/mp4")
          else
            img(class='centered' src=image)
    
    div(id='sketch-container')     
    .main-container
      .nav-container
        ul(class='nav-main')
          li: a(href='/') home
          li(class='dropdown')
            a(class='active work' href='/work') work
            ul(class='dropdown-open')
              li: a(href='/coding') creative coding
              li: a(href='/installations') installations
              li: a(href='/motion') motion graphics
              li: a(href='/renders') 3D renders
              li: a(class='active' href='/visuals') visuals
              li: a(href='https://spacepunk.media') spacepunk.media
          li: a(href='/about') about
      
      .info-container
        p(class='centered') a collection of images from live visual performances
      +work-link(false, '/images/atlantis-deep/img-00-min.png', false, '/images/atlantis-deep/img-00.png')
      +work-link(false, '/images/atlantis-deep/img-01-min.png', false, '/images/atlantis-deep/img-01.png')
      +work-link(false, '/images/atlantis-deep/img-02-min.png', false, '/images/atlantis-deep/img-02.png')
      +work-link(false, '/images/atlantis-deep/img-03-min.png', false, '/images/atlantis-deep/img-03.png')
      +work-link(false, '/images/atlantis-deep/img-04-min.png', false, '/images/atlantis-deep/img-04.png')
      +work-link(false, '/images/atlantis-deep/img-05-min.png', false, '/images/atlantis-deep/img-05.png')
      +work-link(false, '/images/atlantis-deep/img-06-min.png', false, '/images/atlantis-deep/img-06.png')
      
      
  script(src='javascripts/script.js')
