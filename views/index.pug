  body
    mixin work-link(title, image, webm)
      .info-container
        if title
          p(class='centered')= title
        if webm
          video(class='centered' src=image autoplay loop)
        else
          img(class='centered' src=image)
        
    .main-container
      .nav-container
        ul(class='nav-main')
          li: a(class='active' href='/') home
          li(class='dropdown')
            a(class='work' href='/work' ) work
            ul(class='dropdown-open')
              li: a(href='/visuals') visuals
              li: a(href='/renders') 3D renders
              li: a(href='/motion') motion graphics
              li: a(href='/installations') installations
              li: a(href='/coding') creative coding
              li: a(href='https://spacepunk.media') spacepunk.media
          li: a(href='/about') about
      .info-container
        p.
