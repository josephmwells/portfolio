doctype html
html(lang='en')
  include ./head.pug
    
  body
    
    mixin work-link(title, image, webm, link, text)
      .info-container
        if title
          if link
            a(href=link): p(class='title centered')= title
          else
            p(class='title centered')= title
        if link
          if webm
            video(controls loop)
              source(src= image + ".webm" type="video/webm")
              source(src= image + ".mp4" type="video/mp4")
          else
            a(href=link): img(class='centered' src=image)
        else
          if webm
            video(controls loop)
              source(src= image + ".webm" type="video/webm")
              source(src= image + ".mp4" type="video/mp4")
          else
            img(class='centered' src=image)
        if text
          p(class='info-header') <strong>info</strong>
          p(class='info-text')= text
    
    div(id='sketch-container')     
    .main-container
      .nav-container
        ul(class='nav-main')
          li: a(href='/') home
          li(class='dropdown')
            a(class='active work' href='/work') work
            ul(class='dropdown-open')
              li: a(href='/coding') creative coding
              li: a(class='active' href='/installations') installations
              li: a(href='/motion') motion graphics
              li: a(href='/renders') 3D renders
              li: a(href='/visuals') visuals
              li: a(href='https://spacepunk.media') spacepunk.media
          li: a(href='/about') about
    
      +work-link('light drum', '/images/installations/light-drum.png', false, 'https://www.instagram.com/p/BfH9u4mlnbG/?utm_source=ig_web_copy_link')
      +work-link('paint.IR', '/images/installations/paintir.png', false, 'http://spacepunk.media/paintir')
      +work-link('brite-lite', 'https://zippy.gfycat.com/HeavenlyThoughtfulBorer', true)
      +work-link('ghost in the machine', '/images/installations/interactive/ghosts.jpg', false, false, "A hidden corner. A mysterious machine. Let the ghosts of our modern technology reveal to you the answers to the questions inside. Ghost in the Machine is an esoteric installation piece where the user can divine their own inner-self. Using mirrors and static, an illusion of mysticism is created, allowing the viewer to lose themselves in the myth of the experience.")
      +work-link('salt in the water', 'https://zippy.gfycat.com/ShabbyLeadingBlackwidowspider', true)
      +work-link('D.U.G. x DISJECTA', 'https://fat.gfycat.com/FrayedAjarHyrax', true)
      +work-link('walld art', 'https://zippy.gfycat.com/MeekGreenGhostshrimp', true)
      +work-link('digital avatar', 'https://giant.gfycat.com/AffectionateSnivelingGallowaycow', true, 'https://vimeo.com/163204617')    
      
  script(src='javascripts/script.js')
