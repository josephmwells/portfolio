doctype html
html(lang='en')
  head
    meta(charset='UTF-8')
    meta(name="viewport" content="width=device-width, initial-scale=1")
    title a portal to another world
    link(rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css")
    link(href="css/styles.css" rel="stylesheet" type='text/css')
    script(src='https://code.jquery.com/jquery-3.2.1.min.js')
    
  body
    
    mixin work-link(title, image, webm, link)
      .info-container
        if title
          if link
            a(href=link): p(class='title centered')= title
          else
            p(class='title centered')= title
        if link
          if webm
            video(class='centered' src=image controls loop)
          else
            a(href=link): img(class='centered' src=image)
        else
          if webm
            video(class='centered' src=image controls loop)
          else
            img(class='centered' src=image)
        
    .main-container
      .nav-container
        ul(class='nav-main')
          li: a(href='/') home
          li(class='dropdown')
            a(class='active work' href='/work') work
            ul(class='dropdown-open')
              li: a(href='/visuals') visuals
              li: a(href='/renders') 3D renders
              li: a(href='/motion') motion graphics
              li: a(class='active' href='/installations') installations
              li: a(href='/coding') creative coding
              li: a(href='https://spacepunk.media') spacepunk.media
          li: a(href='/about') about
    
      +work-link('paint.IR', '/images/paintir.png', false, 'https://vimeo.com/207905122')
      +work-link('brite-lite', 'https://zippy.gfycat.com/HeavenlyThoughtfulBorer.webm', true)
      +work-link('ghost in the machine', '/images/installations/interactive/ghosts.jpg', false)
      +work-link('salt in the water', 'https://zippy.gfycat.com/ShabbyLeadingBlackwidowspider.webm', true)
      +work-link('D.U.G. x DISJECTA', 'https://fat.gfycat.com/FrayedAjarHyrax.webm', true)
      +work-link('walld art', 'https://zippy.gfycat.com/MeekGreenGhostshrimp.webm', true)
      +work-link('digital avatar', 'https://thumbs.gfycat.com/AffectionateSnivelingGallowaycow-mobile.mp4', true, 'https://vimeo.com/163204617')    
      
  script(src='javascripts/script.js')
