doctype html
html(lang='en')
  head
    meta(charset='UTF-8')
    meta(name="viewport" content="width=device-width, initial-scale=1")
    title a portal to another world
    link(rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css")
    link(href="css/styles.css" rel="stylesheet" type='text/css')
    script(src='https://code.jquery.com/jquery-3.2.1.min.js')
    
  body
    
    mixin work-link(title, image, webm, link, text, code)
      .info-container
        if link
          a(class='centered' href= link): p= title
          if webm
            video(controls autoplay loop)
              source(src= image + ".webm" type="video/webm")
              source(src= image + ".mp4" type="video/mp4")
          else
            a(class='centered' href= link): img(src=image)
        else
          p(class='centered title')= title
          if webm
            video(controls autoplay loop)
              source(src= image + ".webm" type="video/webm")
              source(src= image + ".mp4" type="video/mp4")
          else
            a(class='centered' href= link): img(src=image)
        if text
          p(class='info-header') <strong>info</strong>
          p(class='info-text')= text
        if code
          p(class='info-header') <strong>code snippet</strong>
          if code == '0'
              pre(class='info-text')
                include /code/gridGen-grid.pde
          if code == '1'
              pre(class='info-text')
                include /code/ofx-winter-lights.cpp
          if code == '2'
              pre(class='info-text')
                include /code/gridGen-lines.pde  
          if code == '3'
              pre(class='info-text')
                include /code/gridGen-ellipse.pde  
          if code == '4'
              pre(class='info-text')
                include /code/gridGen-ellipse.pde  
          if code == '5'
              pre(class='info-text')
                include /code/gridGen-grid.pde           
  
    .main-container
      .nav-container
        ul(class='nav-main')
          li: a(href='/') home
          li(class='dropdown')
            a(class='active work' href='/work') work
            ul(class='dropdown-open')
              li: a(class='active' href='/coding') creative coding
              li: a(href='/installations') installations
              li: a(href='/motion') motion graphics
              li: a(href='/renders') 3D renders
              li: a(href='/visuals') visuals
              li: a(href='https://spacepunk.media') spacepunk.media
          li: a(href='/about') about
          
      +work-link('gridGen -- grid', 'https://zippy.gfycat.com/ComplicatedAggravatingAustraliansilkyterrier', true, 'https://github.com/monstertux/processing-gridgen/blob/master/gridGen_AudioInput_v2.pde', 'a series of audio generated grid patterns to relax the mind and release the voice -- made with Processing', '0')
