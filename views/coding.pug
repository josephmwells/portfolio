doctype html
html(lang='en')
  head
    meta(charset='UTF-8')
    meta(name="viewport" content="width=device-width, initial-scale=1")
    title a portal to another world
    link(rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css")
    link(href="css/styles.css" rel="stylesheet" type='text/css')
    script(src='https://code.jquery.com/jquery-3.2.1.min.js')
    
  body
    
    mixin work-link(title, image, webm, link, text)
      .info-container
        if link
          a(class='centered' href= link): p= title
          if webm
            a(class='centered'): video(src=image controls loop)
          else
            a(class='centered' href= link): img(src=image)
        else
          p(class='centered title')= title
          if webm
            a(class='centered'): video(src=image controls loop)
          else
            a(class='centered' href= link): img(src=image)
        if text
          p(class='info-header') <strong>info</strong>
          p(class='info-text')= text
          
        
        
        
    .main-container
      .nav-container
        ul(class='nav-main')
          li: a(href='/') home
          li(class='dropdown')
            a(class='active work' href='/work') work
            ul(class='dropdown-open')
              li: a(class='active' href='/coding') creative coding
              li: a(href='/installations') installations
              li: a(href='/motion') motion graphics
              li: a(href='/renders') 3D renders
              li: a(href='/visuals') visuals
              li: a(href='https://spacepunk.media') spacepunk.media
          li: a(href='/about') about
          
      +work-link('gridGen -- grid', 'https://zippy.gfycat.com/ComplicatedAggravatingAustraliansilkyterrier.webm', true, 'https://github.com/monstertux/processing-gridgen/blob/master/gridGen_AudioInput_v2.pde', false)
      +work-link('paint.IR', '/images/paintir.png', false, 'http://spacepunk.media/paintir')
      +work-link('gridGen -- lines', 'https://zippy.gfycat.com/DecentSelfreliantFinwhale.webm', true, 'https://github.com/monstertux/processing-gridgen/blob/master/audioReactive_gridGen_v3.pde', false)
      +work-link('constructed criticism', '/images/creative-coding/constructed.jpg', false, 'http://www.constructedcriticism.club', false)      
      +work-link('gridGen -- elipse', 'https://fat.gfycat.com/SickSerpentineHoneyeater.webm', true, 'https://github.com/monstertux/processing-gridgen/blob/master/audioInput_ellipse_v2.pde', false)
    
      
