doctype html
html(lang='en')
  head
    meta(charset='UTF-8')
    title a portal to another world
    link(rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css")
    link(href="css/styles.css" rel="stylesheet" type='text/css')
    script(src='https://code.jquery.com/jquery-3.2.1.min.js')
    
  body
    
    mixin work-link(title, image, path, webm)
      .info-container
        a(class='centered' href= path): p= title
        if webm
          a(class='centered' href= path): video(src=image autoplay loop)
        else
          a(class='centered' href= path): img(src=image)
        
    .main-container
      .nav-container
        ul(class='nav-main')
          li: a(href='/') home
          li(class='dropdown')
            a(class='active work' ) work
            ul(class='dropdown-open')
              li: a(href='/visuals') visuals
              li: a(href='/renders') 3D renders
              li: a(href='/motion') motion graphics
              li: a(href='/installations') installations
              li: a(href='/coding') creative coding
              li: a(href='https://spacepunk.media') spacepunk.media
          li: a(href='/about') about
          
      +work-link('visuals', '/images/atlantis-deep/img-00.png', '/visuals', false)
      +work-link('3D renders', '/images/cinema4d/still/bead-bust-00.jpg', '/renders', false)
      +work-link('motion graphics', 'https://zippy.gfycat.com/MiserableBetterBarb.webm', '/motion', true)
      +work-link('installations', '/images/paintir.png', '/installations', false)
      +work-link('creative coding', '/images/paintir.png', '/coding', false)
      +work-link('spacepunk.media', '/images/spacepunk.png', 'https://spacepunk.media', false)
      
  script(src='javascripts/script.js')
      
      
