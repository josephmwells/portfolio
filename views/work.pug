doctype html
html(lang='en')
  head
    meta(charset='UTF-8')
    meta(name="viewport" content="width=device-width, initial-scale=1")
    title a portal to another world
    link(rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css")
    link(href="css/styles.css" rel="stylesheet" type='text/css')
    script(src='https://code.jquery.com/jquery-3.2.1.min.js')
    
  body
    
    mixin work-link(title, image, path, webm, text)
      .info-container
        a(class='centered' href= path): p= title
        if webm
          a(class='centered' href= path): video(src=image controls autoplay loop)
        else
          a(class='centered' href= path): img(src=image)
        if text
          p(class='info-header') <strong>info</strong>
          p(class='info-text')= text
        
    .main-container
      .nav-container
        ul(class='nav-main')
          li: a(href='/') home
          li(class='dropdown')
            a(class='active work' ) work
            ul(class='dropdown-open')
              li: a(href='/coding') creative coding
              li: a(href='/installations') installations
              li: a(href='/motion') motion graphics
              li: a(href='/renders') 3D renders
              li: a(href='/visuals') visuals
              li: a(href='https://spacepunk.media') spacepunk.media
          li: a(href='/about') about
      
      +work-link('creative coding', 'https://zippy.gfycat.com/ComplicatedAggravatingAustraliansilkyterrier.webm', '/coding', true)
      +work-link('installations', '/images/paintir.png', '/installations', false)
      +work-link('motion graphics', 'https://zippy.gfycat.com/MiserableBetterBarb.webm', '/motion', true, 'examples of motion graphics work made in After Effects and Cinema 4D')    
      +work-link('3D renders', '/images/cinema4d/still/bead-bust-00.jpg', '/renders', false, 'a collection of renders made in Cinema 4D and edited in Photoshop and After Effects respectively')
      +work-link('visuals', '/images/atlantis-deep/img-00.png', '/visuals', false, 'a collection of images from live visual performances')
      +work-link('spacepunk.media', '/images/spacepunk.png', 'https://spacepunk.media', false)
      
  script(src='javascripts/script.js')
      
      
